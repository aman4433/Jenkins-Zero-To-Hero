pipeline {
  agent any
  preBuild {
    steps {
      sh 'export M2_HOME=/opt/maven'
      sh 'export PATH=${M2_HOME}/bin:${PATH}'
    }
  }
  stages {
    stage('Checkout') {
      steps {
        echo 'passed'
        git branch: 'dev', url: 'https://github.com/aman4433/Jenkins-Zero-To-Hero.git'
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean install'
      }
    }
  }
}
