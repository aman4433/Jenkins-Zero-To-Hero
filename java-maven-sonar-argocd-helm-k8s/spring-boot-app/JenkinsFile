pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        echo 'passed'
        git branch: 'dev', url: 'https://github.com/aman4433/Jenkins-Zero-To-Hero.git'
      }
    }
    stage('Build and Test') {
      steps {
        // Export M2_HOME and PATH
        sh 'export M2_HOME=/opt/maven'
        sh 'export PATH=${M2_HOME}/bin:${PATH}'

        // List the contents of the current directory
        sh 'ls -ltr'

        // Build the project and create a JAR file
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && /opt/maven/bin/mvn clean install'
      }
    }
  }
}
